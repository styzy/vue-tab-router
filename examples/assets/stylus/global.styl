baseAcf()
	&:after
		display block
		clear both
		content ''
		zoom 1
baseTrans(duration = 0.3s)
	transition duration
baseImg()
	display block
	width 100%
	height 100%
	border none
baseScroll()
	if (arguments == 'dark')
		&::-webkit-scrollbar
			width 8px
			height 8px
		&::-webkit-scrollbar-track-piece
			background-color #222222
		&::-webkit-scrollbar-thumb
			border-radius 9px
			background-color #333333
		&::-webkit-scrollbar-thumb:hover
			background-color #444444
	else
		&::-webkit-scrollbar
			width 8px
			height 8px
		&::-webkit-scrollbar-track-piece
			background-color #EEEEEE
		&::-webkit-scrollbar-thumb
			border-radius 9px
			background-color #CCCCCC
		&::-webkit-scrollbar-thumb:hover
			background-color #BBBBBB